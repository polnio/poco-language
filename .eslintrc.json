{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "ignorePatterns": ["build"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json"
  },
  "plugins": ["prettier"],
  "rules": {
    "@typescript-eslint/explicit-member-accessibility": "error"
  }
}
